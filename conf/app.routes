GET         /approvals/approve-scope/:id/approve/scopes/:scopeName             controllers.ApproveScopeController.onApprove(id: String, scopeName:String)

GET         /application/register/add-team-members                             controllers.QuestionAddTeamMembersController.onPageLoad(mode: Mode = NormalMode)
