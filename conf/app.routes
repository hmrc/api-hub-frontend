GET         /change-add-team-member-details/:index              controllers.AddTeamMemberDetailsController.onPageLoad(mode: Mode = CheckMode, index: Int)
POST        /change-add-team-member-details/:index              controllers.AddTeamMemberDetailsController.onSubmit(mode: Mode = CheckMode, index: Int)

GET         /team-members-overview                              controllers.ConfirmAddTeamMemberController.onPageLoad(mode: Mode = NormalMode)
POST        /team-members-overview                              controllers.ConfirmAddTeamMemberController.onSubmit(mode: Mode = NormalMode)
