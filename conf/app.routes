GET         /experimentalStrideLoginUser                        controllers.ExperimentalStrideLoginController.apiHubUser()
GET         /experimentalStrideLoginApprover                    controllers.ExperimentalStrideLoginController.apiHubApprover()

DELETE      /team-members/:index                                controllers.RemoveTeamMemberController.removeTeamMember(mode: Mode = NormalMode, index: Int)
